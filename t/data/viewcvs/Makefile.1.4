CD = cd
MAKE = make
RM = rm
RMALL = $(RM) -fv

PM_SUFFIX = .pm

all:
	$(CD) Util && $(MAKE) .discore-all$(PM_SUFFIX) all
	$(CD) Markup && $(MAKE) all
	$(CD) DOM && $(MAKE) all

clean:
	$(RMALL) *.BAK .*.BAK *~ .*~
	$(CD) Body && $(MAKE) clean
	$(CD) Field && $(MAKE) clean
	$(CD) MIME && $(MAKE) clean
	$(CD) Util && $(MAKE) clean
	$(CD) Markup && $(MAKE) clean
	$(CD) DOM && $(MAKE) clean

distclean:
	$(RMALL) *.BAK .*.BAK *~ .*~
	$(CD) Body && $(MAKE) distclean
	$(CD) Field && $(MAKE) distclean
	$(CD) MIME && $(MAKE) distclean
	$(CD) Util && $(MAKE) distclean
	$(CD) Markup && $(MAKE) distclean
	$(CD) DOM && $(MAKE) distclean

