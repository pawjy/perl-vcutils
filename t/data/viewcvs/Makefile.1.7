	$(CD) Field && $(MAKE) clean
	$(CD) MIME && $(MAKE) clean
	$(CD) Util && $(MAKE) clean
	$(CD) Markup && $(MAKE) clean
	$(CD) DOM && $(MAKE) clean
	$(CD) URI && $(MAKE) clean

