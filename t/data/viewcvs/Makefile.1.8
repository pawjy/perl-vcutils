CD = cd
MAKE = make
RM = rm
RMALL = $(RM) -fv

PM_SUFFIX = .pm

all:
	$(CD) Util && $(MAKE) all
	$(CD) Markup && $(MAKE) all
	$(CD) DOM && $(MAKE) all
	$(CD) URI && $(MAKE) all
	$(CD) CGI && $(MAKE) all

clean:
	$(RMALL) *.BAK .*.BAK *~ .*~
	$(CD) Body && $(MAKE) clean
	$(CD) Field && $(MAKE) clean
	$(CD) MIME && $(MAKE) clean
	$(CD) Util && $(MAKE) clean
	$(CD) Markup && $(MAKE) clean
	$(CD) DOM && $(MAKE) clean
	$(CD) URI && $(MAKE) clean
	$(CD) CGI && $(MAKE) clean

distclean:
	$(RMALL) *.BAK .*.BAK *~ .*~
	$(CD) Body && $(MAKE) distclean
	$(CD) Field && $(MAKE) distclean
	$(CD) MIME && $(MAKE) distclean
	$(CD) Util && $(MAKE) distclean
	$(CD) Markup && $(MAKE) distclean
	$(CD) DOM && $(MAKE) distclean
	$(CD) URI && $(MAKE) distclean
	$(CD) CGI && $(MAKE) distclean

